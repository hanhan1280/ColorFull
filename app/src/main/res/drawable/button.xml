<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
android:color="@color/myLightBLUE">
<item android:id="@android:id/background">
    <shape>
        <stroke android:width="3dp" android:color="@color/myLightBLUE"/>
        <corners android:radius="8dp"/>
        <padding android:top="10dp" android:bottom="10dp" android:right="10dp" android:left="10dp"/>
    </shape>
</item>
<item android:id="@android:id/mask">
    <shape android:shape="rectangle">
        <solid android:color="@color/myDarkBLUE" />
        <corners android:radius="8dp" />
    </shape>
</item>
</ripple>