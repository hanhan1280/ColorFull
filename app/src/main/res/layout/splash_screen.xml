<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/myDarkBlue3">

    <android.support.constraint.Guideline
        android:id="@+id/center_V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintGuide_percent="0.5"/>

    <android.support.constraint.Guideline
        android:id="@+id/center_H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintGuide_percent="0.45"/>

    <android.support.constraint.Guideline
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintGuide_percent="0.38"/>

    <ImageView
        android:layout_width="381dp"
        android:layout_height="291dp"
        android:src="@drawable/blackstrixicon"
        app:layout_constraintTop_toTopOf="@id/center_H"
        app:layout_constraintBottom_toBottomOf="@id/center_H"
        app:layout_constraintLeft_toLeftOf="@id/center_V"
        app:layout_constraintRight_toRightOf="@id/center_V" />

    <TextView
        android:layout_width="392dp"
        android:layout_height="294dp"
        android:background="@drawable/title"
        app:layout_constraintLeft_toLeftOf="@id/center_V"
        app:layout_constraintRight_toRightOf="@id/center_V"
        app:layout_constraintTop_toBottomOf="@id/title" />


</android.support.constraint.ConstraintLayout>